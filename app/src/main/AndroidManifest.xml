<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mj_uc.excursapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".vista.Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="Actividades"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".ConsultaGrupo"
            android:label="Consulta por Grupo/s"
            android:theme="@style/AppThemeWithActionBar"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".ConsultaFecha"
            android:label="Consulta por Fecha/s"
            android:theme="@style/AppThemeWithActionBar"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".vista.Help.Help"
            android:label="@string/NDW_ayuda"
            android:theme="@style/AppThemeWithActionBar"

            />

        <activity android:name=".vista.Help.HelpCreate"
            android:label="@string/comocrear"
            android:theme="@style/AppThemeWithActionBar"
            android:parentActivityName=".vista.Help.Help" />

        <activity android:name=".vista.Help.HelpSearch"
            android:label="@string/comofiltrar"
            android:theme="@style/AppThemeWithActionBar"
            android:parentActivityName=".vista.Help.Help"/>

        <activity android:name=".vista.Help.HelpPrint"
            android:label="@string/comoimprimir"
            android:theme="@style/AppThemeWithActionBar"
            android:parentActivityName=".vista.Help.Help"/>

        <activity android:name=".vista.Help.HelpEdit"
            android:label="@string/comoeditar"
            android:theme="@style/AppThemeWithActionBar"
            android:parentActivityName=".vista.Help.Help"/>

        <activity android:name=".vista.Help.HelpDelete"
            android:label="@string/comoborrar"
            android:theme="@style/AppThemeWithActionBar"
            android:parentActivityName=".vista.Help.Help"/>

        <activity
            android:name=".vista.VerActividad"
            android:label="@string/app_name_view"
            android:theme="@style/AppThemeWithActionBar"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity
            android:name=".vista.CreateActivity"
            android:label="@string/app_name_view"
            android:theme="@style/AppThemeWithActionBar"
            android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>