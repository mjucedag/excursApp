<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/celeste"
    android:backgroundTint="@color/celeste"
    tools:context=".vista.ConfirmacionActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:layout_marginTop="122dp"
        app:cardBackgroundColor="@android:color/background_light"
        app:cardElevation="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/width_ima"
                android:layout_height="@dimen/height_ima"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:foregroundGravity="clip_vertical"
                app:srcCompat="@mipmap/sinfoto" />

            <TextView
                android:id="@+id/pregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="21dp"
                android:text="Â¿Desea seleccionar esta imagen?"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cancelar"
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="26dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="Cancelar"
                android:textColor="@color/azulOscuro"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/aceptar"
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/cancelar"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:text="Aceptar"
                android:textColor="@color/azulOscuro"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>